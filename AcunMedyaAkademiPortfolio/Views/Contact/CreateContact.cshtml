@model AcunMedyaAkademiPortfolio.Models.TblContact

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni İletişim Ekleme</h2>

<form method="post">
    <label>İsim-Soyisim</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Konu</label>
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />
    <label>E-mail</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Gün</label>
    @Html.TextBoxFor(x => x.CreateDate, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">İletişim Bilgilerini Kaydet</button>
</form>

