@model AcunMedyaAkademiPortfolio.Models.TblContact

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>İetişim Bilgileri Güncelleme</h2>
@using (Html.BeginForm("UpdateContact", "Contact", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.ContectId)

    <label>İsim-Soyisim</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

    <label>Konu</label>
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })


    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })

    <label>Description</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

    <label>Gün</label>
    @Html.TextBoxFor(x => x.CreateDate, new { @class = "form-control" })
    <br />
    <button type="submit" class="btn btn-info">Adresi Güncelle</button>
}

