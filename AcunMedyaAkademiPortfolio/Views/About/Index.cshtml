@model List<AcunMedyaAkademiPortfolio.Models.TblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<h2> About</h2>

<table class="table table-bordered">

    <tr>
        <td>Id</td>
        <td>About Açıklaması</td>
        <td>About Başlık</td>
        <td>About Resmi</td>


    </tr>
    @foreach (var item in Model) // buradaki model ile toblodaki verileri tutyoruz
    {
        <tr>
            <td>@item.AbaoutId</td>
            <td>@item.Descrition</td>
            <td>@item.Title</td>
            <td>
                <img src="@item.ImageUrl" alt="About Image" class="img-thumbnail" style="max-width:75px; max-height:75px;" />
            </td>
            
            <td><a href="/About/UpdateAbout/@item.AbaoutId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/About/DeleteAbout/@item.AbaoutId" class="btn btn-danger">Sil</a></td>

        </tr>

    }
</table>
<th><a href="/About/CreateAbout" class="btn d-block btn-success">Yeni About Ekle</a></th>

