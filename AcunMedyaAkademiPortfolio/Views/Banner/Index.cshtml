@model List<AcunMedyaAkademiPortfolio.Models.TblBanner>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Afiş Listesi</h2>

<table class="table table-bordered">

    <tr>
        <td>Id</td>
        <td>Afiş Başlığı</td>
        <td>Afiş Açıklaması</td>
        <td>Afiş Resmi</td>

    </tr>
    @foreach (var item in Model) // buradaki model ile toblodaki verileri tutyoruz
    {
        <tr>
            <td>@item.BannerId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <img src="@item.ImageUrl" alt="Banner Image" class="img-thumbnail" style="max-width:75px; max-height:75px;" />
            </td>
            <td><a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Banner/DeleteBanner/@item.BannerId" class="btn btn-danger">Sil</a></td>

        </tr>

    }
</table>
<th><a href="/Banner/CreateBanner" class="btn d-block btn-success">Yeni Afiş Ekle</a></th>



