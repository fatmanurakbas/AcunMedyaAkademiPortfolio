@model List<AcunMedyaAkademiPortfolio.Models.TblSkill>
@{
    ViewBag.Title = "SkillList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>Yeteneklerim</h2>
<table class="table table-bordered">

    <tr>
        <th>*</th>
        <th>Başlık</th>
        <th>Değeri</th>
        <th>Geçen Hafta</th>
        <th>Geçen Ay</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model) // buradaki model ile toblodaki verileri tutyoruz
    {
        <tr>
            <td>@item.Skilld</td>
            <td>@item.Title</td>
            <td>@item.Value</td>
            <td>@item.LastWeekValue</td>
            <td>@item.LastMonthValue</td>
            <td><a href="/Skill/UpdateSkill/@item.Skilld" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Skill/DeleteSkill/@item.Skilld" class="btn btn-danger">Sil</a></td>

        </tr>

    }
</table>
<td><a href="/Skill/CreateSkill" class=" btn d-block btn-success">Yeni Referans Ekle</a></td>


