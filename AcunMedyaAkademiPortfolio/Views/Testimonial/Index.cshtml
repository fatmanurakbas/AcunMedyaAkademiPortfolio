
@model List<AcunMedyaAkademiPortfolio.Models.TblTestimonial>
@{
    //buradaki model ile hangi tabloyu kullanacağımızın yolunu belirliyoruz
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h2>Referanslarım</h2>
<table class="table table-bordered">

    <tr>
        <td>Id</td>
        <td>İsim</td>
        <td>Mesleği</td>
        <td>Açıklama</td>
        <td>Güncelle</td>
        <td>Sil</td>
    </tr>
    @foreach (var item in Model) // buradaki model ile toblodaki verileri tutyoruz
    {
        <tr>
            <td>@item.TestimonialId</td>
            <td>@item.TestimonialName</td>
            <td>@item.TestimonialTitle</td>
            <td>@item.TestimonialDescription</td>
            <td>
                <img src="@item.TestimonialImageUrl" alt="Testimonial Image" class="img-thumbnail" style="max-width:75px; max-height:75px;" />
            </td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>

        </tr>

    }
</table>
<th><a href="/Testimonial/CreateTestimonial" class="btn d-block btn-success">Yeni Referans Ekle</a></th>

