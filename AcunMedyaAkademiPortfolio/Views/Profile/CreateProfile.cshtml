@model AcunMedyaAkademiPortfolio.Models.TblProfile

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Profil Ekleme</h2>

<form method="post">
    <label>İsim-Soyisim</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Doğum Günü (Gün-Ay-Yıl)</label>
    @Html.TextBoxFor(x => x.Birthday, new { @class = "form-control" })
    <br />

    <label>Adres</label>
    @Html.TextBoxFor(x => x.Adrees, new { @class = "form-control" })
    <br />

    <label>E-mail</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />

    <label>Telefon No</label>
    @Html.TextBoxFor(x => x.Telefone, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Profil Kaydet</button>
</form>

