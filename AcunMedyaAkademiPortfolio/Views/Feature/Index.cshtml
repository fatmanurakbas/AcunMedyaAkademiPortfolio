@model List<AcunMedyaAkademiPortfolio.Models.TblFeature>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Özellik Listesi</h2>

<table class="table table-bordered">

    <tr>
        <td>Id</td>
        <td>Özelliğin Başlığğı</td>
        <td>Özelliğin Konusu</td>
        <td>Özelliğin Resmi</td>

    </tr>
    @foreach (var item in Model) // buradaki model ile toblodaki verileri tutyoruz
    {
        <tr>
            <td>@item.FeatureTitle</td>
            <td>@item.FeatureSubtitle</td>
            <td>
                <img src="@item.FeatureImager" alt="Feature Image" class="img-thumbnail" style="max-width:75px; max-height:75px;" />
            </td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>

        </tr>

    }
</table>
<th><a href="/Feature/CreateFeature" class="btn d-block btn-success">Yeni ÖZellik Ekle</a></th>

